<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.smartcards.DeckList"
    android:background="#ffb5bfc4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linearLayout3">
        <ImageButton
            android:contentDescription="@string/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/configbutton"
            android:src="@drawable/settingstransparent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="22dp" />

        <ImageButton
            android:contentDescription="@string/my_decks_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/shareButton"
            android:src="@drawable/mydecks"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="22dp" />

        <ImageButton
            android:contentDescription="@string/cloud_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/locButton"
            android:src="@drawable/cloudtransparent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="22dp" />
    </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/CreateDeckButton"
        android:layout_centerHorizontal="true"
        android:text="@string/create_deck"
        android:onClick="CreateDeck"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:textColor="#ffffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode = "singleChoice"
        android:listSelector="@android:color/white"
        android:background="@android:color/white"
        android:id="@+id/deckList"
        android:textSize="12sp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_above="@+id/CreateDeckButton"
        android:scrollbars="none" />
</RelativeLayout>
