<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.smartcards.ScoreScreen"
    android:background="#ffb5bfc4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="right"
            android:textColor="#50404040"
            android:textSize="32sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/Right"
            android:textColor="#ffc3d13f"
            android:textSize="32sp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="wrong"
            android:textColor="#50404040"
            android:textSize="32sp" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:id="@+id/Wrong"
            android:textColor="#ffd6755b"
            android:textSize="32sp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="percent"
            android:textColor="#50404040"
            android:textSize="32sp" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Percent"
            android:id="@+id/Score"
            android:textColor="#FF404040"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true">

        <Button android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff888f93"
            android:id="@+id/button3"
            android:text="redo"
            android:onClick="TryDoneButton"
            android:scaleType="fitCenter"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:textSize="20dp"
            android:textColor="#ffffffff" />

        <Button android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff888f93"
            android:id="@+id/button4"
            android:text="done"
            android:onClick="TryDoneButton"
            android:scaleType="fitCenter"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:textSize="20dp"
            android:textColor="#ffffffff" />

    </LinearLayout>

</RelativeLayout>
