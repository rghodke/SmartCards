<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.smartcards.CardFront"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:background="@android:color/transparent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/DoneButton"
            android:layout_centerHorizontal="true"
            android:text="Done"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_btn_beige"
            android:textColor="#fff"
            android:layout_weight="1"
            android:onClick="GoBacktoDeckView"
             />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:ellipsize="start"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#ffe6e6e6"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/FrontDisplay" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:ellipsize="start"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#fff2f2f2"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/FrontDisplay" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:id="@+id/FrontDisplay"
        android:ellipsize="start"
        android:gravity="center_vertical|center_horizontal"
        android:text="Card Front"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/FlipButton"
        android:layout_centerHorizontal="true"
        android:text="Flip Card"
        android:textSize="20sp"
        android:background="#ff888f93"
        android:textColor="#ffffffff"
        android:onClick="FlipCard"
        android:layout_alignParentBottom="true" />

</RelativeLayout>